generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Game {
  id         String    @id @default(uuid())
  title      String
  img        String
  finishedAt DateTime?
  startedAt  DateTime?
  objects    Object[]
  scores     Score[]

  @@map("game")
}

model Object {
  id     String @id @default(uuid())
  name   String
  img    String
  gameId String
  x      Float
  y      Float
  radius Float
  game   Game   @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@map("object")
}

model Score {
  id       String @id @default(uuid())
  username String
  time     Float
  gameId   String
  game     Game   @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@map("score")
}
